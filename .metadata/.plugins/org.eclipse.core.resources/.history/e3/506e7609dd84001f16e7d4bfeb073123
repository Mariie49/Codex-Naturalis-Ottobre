package cards;

public enum CornerPosition {
	//TOP_LEFT(-1, -1), TOP_RIGHT(-1, 1), BOTTOM_RIGHT(1, 1), BOTTOM_LEFT(1, -1);
	
	// NP 05/10 - Con questa numerazione Ã¨ possibile usare questi offset per fare dei calcoli sulle posizioni.
	TOP_LEFT(0, 1), TOP_RIGHT(1, 1), BOT_RIGHT(1, 0), BOT_LEFT(0, 0);

    private final int rowOffset;
    private final int colOffset;

    CornerPosition(int rowOffset, int colOffset) {
        this.rowOffset = rowOffset;
        this.colOffset = colOffset;
    }

    public int getRowOffset() {
        return rowOffset;
    }

    public int getColOffset() {
        return colOffset;
    }

    private int value;


    public int getValue() {
        return value;
    }
    public CornerPosition getOpposite() {
        switch (this) {
            case TOP_LEFT:
                return BOT_RIGHT;
            case TOP_RIGHT:
                return BOT_LEFT;
            case BOT_RIGHT:
                return TOP_LEFT;
            case BOT_LEFT:
                return TOP_RIGHT;
            default:
                return null; // Non dovrebbe mai accadere
        }
    }
    
}

